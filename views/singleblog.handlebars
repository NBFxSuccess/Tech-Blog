<div class="text-center">
  <h2 class="text-3xl">{{name}}</h2>
  <p class="font-light">Posted by {{user.name}} {{format_date date_created}}</p>
  <p>{{description}}</p>
  </p>
  </br>
  <p>
    {{#if logged_in}}
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="comment">
        Comment
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Comment">
    </div>
    <button class="btn btn-primary">Add comment</button>
  </p>
</div>
{{/if}}
