<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
      <p class="flex justify-center">{{project.name}}</p>
    <p class="flex justify-center" >Posted by {{project.user.name}} {{format_date project.date_created}}</p>
      <p class="flex justify-center">{{project.description}}</p>
      <a  href="/project/{{project.id}}" class="flex justify-center">view</a>
      </br>
{{/each}}
